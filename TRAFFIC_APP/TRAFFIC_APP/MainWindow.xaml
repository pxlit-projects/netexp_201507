<Window x:Class="TRAFFIC_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Traffic Sign Locator" Height="600" Width="525">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label Height="30" HorizontalAlignment="Center" Margin="10,10,10,10">TRAFFIC APP</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="Filter by" Margin="10,10,10,10">
                        <StackPanel>
                            <RadioButton Content="Type"/>
                            <RadioButton Content="Location"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Image Source="/Images/filter-icon.png" Width="15" Height="15" HorizontalAlignment="Left" Margin="10,10,10,10"></Image>
                    <TextBox Width="420" Height="25"></TextBox>
                </StackPanel>
            </StackPanel>
            <ListBox Height="250">
                
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
